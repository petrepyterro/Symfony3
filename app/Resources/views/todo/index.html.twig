{% extends 'base.html.twig' %}
{% block body %}
  <h2 class="page-header">Latest todos</h2>
  <table class="table table-striped"> 
    <thead>
      <tr> 
        <th>#</th> 
        <th>To do</th> 
        <th>Due Date</th>
        <td></td>
      </tr>
    </thead>
    <tbody>
      {% for todo in todos %}
        <tr>
          <th scope="row">{{todo.id}}</th> 
          <td>{{todo.name}}</td>
          <td>{{todo.dueDate|date('F j, Y, g:i a')}}</td>
          <td>
            <a href="/show/{{todo.id}}" class="btn btn-success">View</a>
            <a href="/edit/{{todo.id}}" class="btn btn-success">Edit</a>
            <a href="/delete/{{todo.id}}" class="btn btn-danger">Delete</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}